<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/aboutL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Android app for TROIKA"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" >

    </TextView>

    <TextView
        android:id="@+id/aboutL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutL1"
        android:clickable="true"
        android:layout_marginTop="5dp" />
    
    <TextView
        android:id="@+id/aboutL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutL2"
        android:clickable="true"
        android:layout_marginTop="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/aboutL3"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/closeAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/close"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>