<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp" >

    <TextView
        android:id="@+id/aboutContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Android app for Troika 2013 by IEEE DTU " />
    
    <TextView 
        android:id="@+id/aboutContent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutContent"
        android:layout_marginTop="5dp"
        android:text="This app is open source." />
    
    <TextView 
        android:id="@+id/aboutContent3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutContent2"
        android:layout_marginTop="5dp"
        android:autoLink="web"
        android:text="The source code is hosted on http://github.com/championswimmer/com.dcetech.troika" />

</RelativeLayout>